<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.kontento">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden" />
        <activity
            android:name=".RegistrationActivity"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden">
        </activity>
        <activity android:name=".AddTask" />
            <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
        <activity android:name=".Profile" />
        <activity android:name=".LandingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MemoriesActivity"/>
        <activity android:name=".activities.NewMemoryActivity" />
        <activity android:name=".activities.NewRecordTask" />
        <activity android:name=".activities.Calendar" />
        <activity android:name=".activities.PrivacyPolicy"></activity>
    </application>

</manifest>